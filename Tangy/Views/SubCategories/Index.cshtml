@model IEnumerable<Tangy.Models.SubCategory>
@{
    ViewData["Title"] = "Index";
}
<hr />
<hr/>
<hr/>
<br />
<h2>Quản lý Loại sản phẩm</h2>
<br />
@Html.Partial("_CreateButtonPartial")
<div class="form-border">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.Name)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Category.Name)
            </th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        { 
        <tr>
            <td>
                @Html.DisplayFor(m => item.Name)
            </td>
            <td>
                @Html.DisplayFor(m => item.Category.Name)
            </td>
            <td style="width: 150px">
                <div class="btn-group" role="group">
                    <a type="button" class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id" >
                        <i class="fas fa-edit"></i>
                    </a>
                    <a type="button" class="btn btn-success" asp-action="Details" asp-route-id="@item.Id" >
                        <i class="far fa-list-alt"></i>
                    </a>
                    <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id" >
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </div>
            </td>
        </tr>
        }

    </table>
</div>

